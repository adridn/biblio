                @Html.ValidationMessageFor(model => model.id_Auteur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_Collection, htmlAttributes: new { @class = "control-label col-md-2" })
